@model MVCWeb.Models.Order
@{
    Layout = null;
    ViewBag.Title = "Print Order";
}
<!DOCTYPE html>
<html>
<head>
    <title>Order #@Model.OrderID</title>
    <style type="text/css">
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            line-height: 1.6;
        }

        .company-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
        }

        .order-info {
            margin: 20px 0;
        }

        .section {
            margin-bottom: 20px;
        }

        .row {
            display: flex;
            margin: 8px 0;
        }

        .label {
            font-weight: bold;
            width: 150px;
        }

        .value {
            flex: 1;
        }

        .print-controls {
            margin-bottom: 20px;
        }

        @@media print {
            .print-controls {
                display: none;
            }

            body {
                margin: 0;
                padding: 15px;
            }
        }

        .btn {
            padding: 8px 15px;
            margin-right: 10px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="print-controls">
        <button onclick="window.print()" class="btn btn-primary">Print</button>
        <button onclick="window.close()" class="btn btn-secondary">Close</button>
    </div>

    <div class="company-header">
        <h1>Company Name</h1>
        <h2>Order Details</h2>
    </div>

    <div class="order-info">
        <div class="section">
            <h3>Order Information</h3>
            <div class="row">
                <span class="label">Order Number:</span>
                <span class="value">@Model.OrderID</span>
            </div>
            <div class="row">
                <span class="label">Order Date:</span>
                <span class="value">@(Model.OrderDate.HasValue ? Model.OrderDate.Value.ToShortDateString() : "")</span>
            </div>
        </div>

        <div class="section">
            <h3>Agent Information</h3>
            <div class="row">
                <span class="label">Agent Name:</span>
                <span class="value">@Model.Agent.AgentName</span>
            </div>
        </div>
    </div>

    <div class="footer">
        <p style="text-align: center; margin-top: 50px; font-size: 12px;">
            Printed on @DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString()
        </p>
    </div>
</body>
</html>